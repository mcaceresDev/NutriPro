<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Nutrilife{% endblock %}</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/fontawesome/all.min.css">
  <script src="/js/sweetalert2.all.min.js"></script>
  <style>
    .loginbox{
        width: 300px;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.6);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }
    .background{
        background-color: RGBA(136, 192, 208, 0.5);
    }
  </style>
</head>
<body class="">
    <main class="background container-fluid vh-100 d-flex">
        <div class="loginbox m-auto px-2 pt-5 pb-3">
            {# <form id="formLogin"> action="/auth/login" method="post" #}
            <form id="formLogin">
                <img class="img-fluid" src="assets/img/nutriLifeLogo.png" />
                <input type="text" name="email" id="email" class="my-3 form-control form-control-sm" placeholder="Escribe tu correo institucional" />
                <input type="password" name="password" id="password" class="form-control form-control-sm" placeholder="Escribe tu contraseÃ±a" />
                <p id="error-message" class="d-none my-2 text-center text-danger"> </p>
                <div class="d-flex py-3">
                    <button class="mx-auto btn btn-sm btn-success">Ingresar</button>
                </div>
            </form>
        </div>
    </main>
</body>

<script src="/js/sweetAlertHelper.js"></script>
<script src="/js/auth/authMethods.js"></script>
</html>