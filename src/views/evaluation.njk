{% extends "base.njk" %}

{% block pagetitle %}Evaluación Clínica{% endblock %}
{% block username %}
    {{ username }}
{% endblock %}

{% block content %}

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Evaluacion</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Plan</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
            <div class="border px-4 py-3 rounded d-flex justify-content-start align-items-center">
                <div class="d-flex justify-content-start align-items-center">
                    <img src="/assets/img/malePatient.png"/>
                    <h5 class="mx-3">
                        {{ patient.name }}
                        {{ patient.lastname }}</h5>
                </div>
                <div class="d-flex justify-content-start align-items-center">
                    <span class="mx-3">
                        <i class="fa-solid fa-cake-candles"></i>
                        {{ formattedDate }} ({{ patient.age }} años) <br></span>
                    <span class="mx-3">
                        <i class="fa-solid fa-pen-ruler"></i>
                        {{ patient.height }} m <br></span>
                    <span class="mx-3">
                        <i class="fa-solid fa-mars-and-venus"></i>
                        {{ patient.gender }}
                        <br></span>
                </div>
                <button class="btn">
                    <i class="fa-regular fa-pen-to-square"></i>
                </button>
            </div>

            {# ANTECEDENTES CLINICOS Y FAMILIARES #}
            {% include "partials/clinic_history.njk" %}

            {# MEDICIONES Y CALCULOS BASICOS #}
            {% include "partials/measurement.njk" %}

            {# DATOS BIOQUIMICOS #}
            {% include "partials/biochemical_values.njk" %}

        <div class="my-3 d-flex justify-content-center">
            <button id="btn-saveall" class="btn btn-sm btn-success">Guardar todo el estudio</button>
        </div>
        </div>


        {# BLOQUE DE RECOMENDACIONES NUTRICIONALES #}
        <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
            <div class="card my-4">
                <h5 class="card-header">
                    <i class="fa-solid fa-utensils"></i> Plan Nutricional</h5>
                <div class="card-body">
                    <h5>Consideraciones a tomar en cuenta</h5>
                    <hr>

                    {# VALORES CRITICOS CALCULADOS EN PESTAÑA EVALUACION #}
                    <div id="considerations">
                        <div id="diseaseCons"></div>
                        <div id="drugCons"></div>
                        <div id="foodCons"></div>
                    </div>

                    <h5>Crear menú dietético</h5>
                    <hr>

                    <div class="d-flex gap-3">
                        <div class="w-50">
                            <form id="formPlan" class="row g-3">

                                <h6>Si no especifica un nombre alternativo, la hoja de plan nutricional aparecera con el nombre de la tabla de alimentos INCAP</h6>
                                <div class="col-md-8">
                                    <input type="hidden" name="id" required class="form-control form-control-sm">
                                    <label for="" class="form-label">Alimento<span class="text-danger">*</span></label>
                                    <input type="text" disabled name="name" id="incapname" required class="form-control form-control-sm">
                                </div>
                                <div class="col-md-4 d-flex align-items-end justify-content-start">
                                    <div class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#foodModalPlan">Buscar</div>
                                </div>
                                <div class="col-md-12">
                                    <label for="" class="form-label">Nombre alternativo</label>
                                    <input type="text" name="alternative" id="altname" required class="form-control form-control-sm">
                                </div>

                                <div class="col-md-6">
                                    <label for="" class="form-label">Cantidad <span class="text-danger">*</span></label>
                                    <input type="number" name="amount" id="amount" required class="form-control form-control-sm">
                                </div>
                                <div class="col-md-6">
                                    <label for="" class="form-label">Medida <span class="text-danger">*</span></label>
                                    <select name="measure" id="measure" class="form-select form-select-sm" required aria-label="Small select example">
                                        <option value="0" selected>Seleccione tipo de medida</option>
                                        {% for item in foodSizes %}
                                            <option value="{{item.value}}">{{ item.text }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="" class="form-label">Tipo de medida</label>
                                    <input type="text" name="measuretype" id="measuretype" required class="form-control form-control-sm" placeholder="Solo si eligió 'Otra'">
                                </div>
                                <div class="col-md-6">
                                    <label for="" class="form-label">Porción estimada en gr por unidad (Revisar tabla) <span class="text-danger">*</span></label>
                                    <input type="number" name="portion" id="portion" required class="form-control form-control-sm" placeholder="cantidad en gramos">
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button id="btnCalcFood" type="button" class="btn btn-sm btn-success">Calcular Aporte Nutricional</button>
                                </div>
                            </form>

                            <hr>
                            <div id="foodCalcsContainer" class="w-100 my-2 py-2 px-3">
                            </div>
                            

                            <div id="foodFormContainer" class="w-100 my-2 py-2 px-3">
                            </div>
                        </div>
                        {# FIN FORMULARIO #}
                        <div class="w-50 px-2 border-start">
                            <h6>Utilice la tabla de referencia para asignar medidas</h6>
                            {# <img src="/assets/img/medidas.jpeg" class="w-100" style=""/> #}
                            <table class="table table-bordered table-striped my-4">
                                <thead>
                                    <tr>
                                        <th scope="col">Alimento</th>
                                        <th scope="col" class="text-center">Taza 250cc</th>
                                        <th scope="col" class="text-center">Cuchara</th>
                                        <th scope="col" class="text-center">Cucharilla</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if measureData is defined and measureData | length > 0 %}
                                        {% for item in measureData %}
                                            <tr>
                                                <td>{{ item.alimento }}</td>
                                                <td class="text-center">{{ item.taza }}</td>
                                                <td class="text-center">{{ item.cuchara }}</td>
                                                <td class="text-center">{{ item.cucharilla }}</td>
                                            </tr>
                                        {% endfor %}
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="text-center">"No hay elementos para mostrar"</td>
                                        </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    {# TERMINA BLOQUE DE TABLAS Y CALCULOS DE ALIMENTOS #}
                    
                    {# MODAL DE CREACION DE PLAN #}
                    {% include "partials/evaluation/modalFoodPlan.njk" %}

                    <h5 class="my-3 text-center">Vista previa de menu</h5>
                    <table class="table table-bordered my-4">
                        <thead>
                            <tr>
                                <th scope="col">Dia</th>
                                <th scope="col">Desayuno</th>
                                <th scope="col">Merienda</th>
                                <th scope="col">Almuerzo</th>
                                <th scope="col">Merienda</th>
                                <th scope="col">Cena</th>
                            </tr>
                        </thead>
                        <tbody id="foodTableBody">
                            
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    <script src="/js/food/foodTable.js"></script>
    <script src="/js/sweetAlertHelper.js"></script>
    
    <script src="/js/evaluation/evaluationCalcs.js"></script>
    <script src="/js/evaluation/clinicHistoryMethods.js"></script>

    <script src="/js/evaluation/menuGenerator.js"></script>

{% endblock %}