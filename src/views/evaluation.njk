{% extends "base.njk" %}

{% block pagetitle %}Evaluación Clínica{% endblock %}
{% block username %}
    {{ username }}
{% endblock %}

{% block content %}

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Evaluacion</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Plan</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
            <div class="border px-4 py-3 rounded d-flex justify-content-start align-items-center">
                <div class="d-flex justify-content-start align-items-center">
                    <img src="/assets/img/malePatient.png"/>
                    <h5 class="mx-3">
                        {{ patient.name }}
                        {{ patient.lastname }}</h5>
                </div>
                <div class="d-flex justify-content-start align-items-center">
                    <span class="mx-3">
                        <i class="fa-solid fa-cake-candles"></i>
                        {{ formattedDate }} ({{ patient.age }} años) <br></span>
                    <span class="mx-3">
                        <i class="fa-solid fa-pen-ruler"></i>
                        {{ patient.height }} m <br></span>
                    <span class="mx-3">
                        <i class="fa-solid fa-mars-and-venus"></i>
                        {{ patient.gender }}
                        <br></span>
                </div>
                <button class="btn">
                    <i class="fa-regular fa-pen-to-square"></i>
                </button>
            </div>

            {# FORMULARIO DE ANTECEDENTES CLINICOS #}
            <div class="card my-4">
                <h5 class="card-header">
                    <i class="fa-solid fa-notes-medical"></i> Antecedentes Clínicos</h5>
                <div class="card-body">
                    <form class="row g-3 my-3">
                        <div class="col-md-6 row">
                            <h5>Antecedentes Familiares</h5>
                            <div class="col-md-6">
                                <label for="" class="form-label">Consume Alcohol</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label" for="checkDefault">
                                        Si
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label" for="checkDefault">
                                        No
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="" class="form-label">Fumador</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label" for="checkDefault">
                                        Si
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label" for="checkDefault">
                                        No
                                    </label>
                                </div>
                            </div>
                            
                            {# <div class="col-md-6">
                                <label for="" class="form-label">Peso (kg)</label>
                                <input type="number" required step="any" inputmode="decimal" class="form-control form-control-sm" id="weight" placeholder="Peso en kilogramos">
                            </div> #}
                           
                            <div class="col-md-12">
                                <label for="inputState" class="form-label">Enfermedades genéticas</label>
                                <div class="d-flex gap-3">
                                    <select id="inputFa" class="form-select form-select-sm">
                                        <option selected>Seleccione antecedentes</option>
                                        <option value="Cancer">Cancer</option>
                                        <option value="Diabetes">Diabetes</option>
                                        <option value="Obesidad">Obesidad</option>
                                        <option value="Hipertensión">Hipertensión</option>
                                        <option value="Artritis">Cardiopatías</option>
                                    </select>
                                    <button type="button" id="btn-addGenDisease" class="btn btn-sm btn-primary align-self-end mb-1">Agregar</button>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label for="inputState" class="form-label">Enfermedades diagnosticadas</label>
                                <div class="d-flex gap-3">
                                    <select id="inputFa" class="form-select form-select-sm">
                                        <option selected>Seleccione enfermedades</option>
                                        <option value="Cancer">Cancer</option>
                                        <option value="Diabetes">Diabetes</option>
                                        <option value="Obesidad">Obesidad</option>
                                        <option value="Hipertensión">Hipertensión</option>
                                        <option value="Artritis">Cardiopatías</option>
                                    </select>
                                    <button type="button" id="btn-addDisease" class="btn btn-sm btn-primary align-self-end mb-1">Agregar</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 row">
                            <h5>Habitos y restricciones</h5>
                            <div class="col-md-12">
                                <label for="inputState" class="form-label">Alergias medicamentosas</label>
                                <div class="d-flex gap-3">
                                    <select id="inputFa" class="form-select form-select-sm">
                                        <option selected>Seleccione medicamentos</option>
                                        <option value="Sulfa">Sulfa</option>
                                        <option value="Estatinas">Estatinas</option>
                                        <option value="Penicilinas">Penicilinas</option>
                                    </select>
                                    <button type="button" id="btn-addDrug" class="btn btn-sm btn-primary align-self-end mb-1">Agregar</button>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <label for="inputState" class="form-label">Alergias o Intolerancias Alimenticias</label>
                                <div class="d-flex gap-3">
                                    <select id="inputFa" class="form-select form-select-sm">
                                        <option selected>Seleccione alimentos</option>
                                        <option value="Piña">Piña</option>
                                        <option value="Lactosa">Intolerancia a la lactosa</option>
                                    </select>
                                    <button type="button" id="btn-addResFood" class="btn btn-sm btn-primary align-self-end mb-1">Agregar</button>
                                </div>
                            </div>

                            <div class="col-md-12 row">
                                <div class="col-md-6">
                                    <label for="" class="form-label">Cirugías</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                        <label class="form-check-label" for="checkDefault">
                                            Si
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                        <label class="form-check-label" for="checkDefault">
                                            No
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="" class="form-label">Cual</label>
                                    <input type="text" class="form-control form-control-sm" id="cirugia" placeholder="Escriba una o mas separadas por coma ','">
                                </div>
                            </div>
                            
                        </div>

                        <div class="col-12 d-flex justify-content-center">
                            {# <button type="submit" class="btn btn-sm btn-primary">Guardar</button> #}
                        </div>
                    </form>
                    {# TERMINA FORMULARIO DE ANTECEDENTES CLINICOS #}
                    <hr>
                    <div id="geneticDiContainer"></div>
                    <div id="diagnoseContainer"></div>
                    <div id="drugAleriesContainer"></div>
                    <div id="foodAlergiesContainer"></div>

                </div>
            </div>

            {# MEDICIONES Y CALCULOS BASICOS #}
            {% include "partials/measurement.njk" %}

            {# DATOS BIOQUIMICOS #}
            {% include "partials/biochemical_values.njk" %}

        </div>
        {# BLOQUE DE RECOMENDACIONES NUTRICIONALES #}
        <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
            <div class="card my-4">
                <h5 class="card-header">
                    <i class="fa-solid fa-utensils"></i> Plan Nutricional</h5>
                <div class="card-body">
                    <h5>Consideraciones a tomar en cuenta</h5>
                    <hr>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

