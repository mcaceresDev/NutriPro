    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Nuevo plato</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="" class="mt-4 table-responsive">
          <div class="px-3 d-flex justify-content-between">
            <input id="searchFood" class="form-control form-control-sm mb-3" placeholder="Buscar alimento..." style="max-width:250px"/>
            <span>{{ foodMessage }}</span>
          </div>
          <div id="foodTable" class="border" data-food='{{ food | dump | safe }}'>
            {# TABLA DINAMICA #}
          </div>
        </div>
      </div>
      <div class="modal-footer">
        
      </div>
    </div>
  </div>
</div>