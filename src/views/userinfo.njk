{% extends "base.njk" %}

{% block username %}
    {{ username }}
{% endblock %}

{% block pagetitle %} Mi perfil {% endblock %}

{% block content %}

    <div class="mx-auto d-flex p-4 shadow-lg p-3 mb-5 bg-body-tertiary rounded" style="max-height:400px; max-width:1000px">
        <div class="h-100 d-flex justify-content-between align-items-center">
            <img src="/assets/img/doctor-icon.png"/>
        </div>

        <div class="row gx-3 gy-2 align-items-center p-4">
            <div class="col-sm-12">
                <label class="" for="specificSizeInputGroupUsername">Nombre</label>
                <div class="input-group">
                    <div class="input-group-text"><i class="fa-solid fa-user-doctor"></i></div>
                    <input type="text" class="form-control" id="" value="{{ user.name }} {{ user.lastname }}" disabled placeholder="Username">
                </div>
            </div>
            <div class="col-sm-6">
                <label class="" for="specificSizeInputGroupUsername">Username</label>
                <div class="input-group">
                    <div class="input-group-text"><i class="fa-solid fa-circle-user"></i></div>
                    <input type="text" class="form-control" id="" value="{{ user.username }}" disabled placeholder="">
                </div>
            </div>
            <div class="col-sm-6">
                <label class="" for="specificSizeInputGroupUsername">Correo</label>
                <div class="input-group">
                    <div class="input-group-text"><i class="fa-solid fa-envelope"></i></div>
                    <input type="text" class="form-control" id="" value="{{ user.email }}" disabled placeholder="">
                </div>
            </div>
            <form id="formEditarPass" class="col-12 row" method="PUT">
            <div class="col-sm-6">
                <label class="" for="specificSizeInputGroupUsername">Contraseña</label>
                <div class="input-group">
                    <div class="input-group-text"><i class="fa-solid fa-lock"></i></div>
                    <input type="password" class="form-control" id="editPassword" value="" placeholder="Ingrese nueva contraseña">
                </div>
            </div>
            <div class="col-sm-6">
                <label class="" for="specificSizeInputGroupUsername"></label>
                <div class="input-group">
                    <button class="w-100 btn btn-warning">Actualizar contraseña</button>
                </div>
            </div>
            </form>

        </div>

    </div>
    <div class="my-3 d-flex justify-content-center w-100">
        <a href="/" class="btn btn-sm btn-primary">Volver a inicio</a>
    </div>

{% endblock %}


{% block scripts %}
<script src="/js/sweetAlertHelper.js"></script>
<script src="/js/user/userCrud.js"></script>
{% endblock %}

